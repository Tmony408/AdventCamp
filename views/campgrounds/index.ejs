<% layout('boilerplate') -%>



<section id="showcase" >
  <div class="container text-center">
    <div class="home-search p-lg-5">
      <div class="overlay p-lg-5">
        <h1 class="display-4 mb-4">
          Campground Searching Just Got So Easy
        </h1>
        <p class="lead">Whether you're a seasoned explorer or a novice adventurer, AdventCamp provides a dynamic platform to fuel your passion for the great outdoors.</p>
        <div class="search">
          <form action="/campgrounds">
            <!-- Form Row 1 -->
            <div class="row">
              <div class="col-md-4 mb-3">
                <label class="sr-only" for="keywords">Keywords</label>
                <input type="text" id="keywords" name="keywords" class="form-control" placeholder="Keyword (Bushes, Campfire, etc)">
              </div>

              <div class="col-md-4 mb-3">
                <label class="sr-only" for="title">Title</label>
                <input type="text" id="title" name="title" class="form-control" placeholder="Title">
              </div>

              <div class="col-md-4 mb-3">
                <label class="sr-only"  for="state">State</label>
                <select name="state" disabled id="state" class="form-control">
                  <option selected="true" disabled="disabled">Select your preferred state</option>
                  {% for key,value in states.items %}
                  <option value="{{ key }}">{{ value }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <!-- Form Row 2 -->
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="sr-only" for="country">Country</label>
                <select name="country" disabled id="country" class="form-control ">
                  <option selected="true" disabled="disabled" class="text-secondary"><span class="text-secondary">Select your preferred country</span></option>
                  <option value="Nigeria">Nigeria</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label class="sr-only" for="price">Price</label>
                <input type="number"name="price" id="price" class="form-control" placeholder="Input maximum price">
              </div>
            </div>
            <button class="btn btn-secondary btn-block mt-4" type="submit">Submit form</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>





