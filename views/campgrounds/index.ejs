                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            <p class="card-text">
                                <%=campground.description%>.
                            </p>
                            <p class="card-text"><small class="text-muted">
                                    <%= campground.location%>
                                </small></p>
                            <a href="campgrounds/<%= campground._id %>" class="btn btn-primary">Show More</a>
                        </div>
                    </div>
                </div>
            <% } %>
